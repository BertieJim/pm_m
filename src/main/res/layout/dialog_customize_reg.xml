<!-- res/layout/dialog_customize.xml-->
<!-- 自定义View -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white"

    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/inputtokenonly"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="38dp"

            >
            <EditText
                android:id="@+id/token_edit_1"
                android:layout_width="42dp"
                android:layout_height="60dp"
                android:textSize="35sp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="1"/>
            <TextView
                android:id="@+id/dot_1"
                android:layout_toRightOf="@id/token_edit_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/transparent"
                android:singleLine="true"
                android:layout_alignBottom="@id/token_edit_1"
                />
            <EditText
                android:id="@+id/token_edit_2"
                android:layout_toRightOf="@id/dot_1"
                android:layout_width="42dp"
                android:textSize="35sp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="1"/>
            <TextView
                android:id="@+id/dot_2"
                android:layout_toRightOf="@id/token_edit_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="@android:color/transparent"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_alignBottom="@id/token_edit_2"
                />
            <EditText
                android:id="@+id/token_edit_3"
                android:layout_toRightOf="@id/dot_2"
                android:layout_width="42dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:textSize="35sp"

                android:gravity="bottom"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="1"/>
            <TextView
                android:id="@+id/dot_3"
                android:layout_toRightOf="@id/token_edit_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="@android:color/transparent"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_alignBottom="@id/token_edit_3"
                />
            <EditText
                android:id="@+id/token_edit_4"
                android:layout_toRightOf="@id/dot_3"
                android:layout_width="42dp"
                android:textSize="35sp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="1"/>
            <TextView
                android:id="@+id/dot_4"
                android:layout_toRightOf="@id/token_edit_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:layout_marginTop="10dp"
                android:textColor="@android:color/transparent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_alignBottom="@id/token_edit_4"
                />
            <EditText
                android:id="@+id/token_edit_5"
                android:layout_toRightOf="@id/dot_4"
                android:layout_width="42dp"
                android:textSize="35sp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="1"/>
            <TextView
                android:id="@+id/dot_5"
                android:layout_toRightOf="@id/token_edit_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="@android:color/transparent"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_alignBottom="@id/token_edit_5"
                />
            <EditText
                android:id="@+id/token_edit_6"
                android:layout_toRightOf="@id/dot_5"
                android:layout_width="42dp"
                android:textSize="35sp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="1"/>
        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_marginTop="22dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <TableRow >
                <Button
                    android:id="@+id/btn_cancelreg"
                    android:layout_marginLeft="24dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btncancel"

                    />
                <Button
                    android:id="@+id/btn_confirmreg"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="58dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btnconfirm"

                    />
            </TableRow>

        </TableLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"

            />
    </LinearLayout>

</LinearLayout>
